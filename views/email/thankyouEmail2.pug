head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800' rel='stylesheet')
  title NYCKiqs Email
  style.
    .roomImg{
    background: url('../public/images/emailImages/roomstore.jpg');
    }
    .order-details, .order-details td{
    border: 1px solid white;
    }
    /* to make responsive for large screen */
    @media only screen and (min-width: 960px){
    .container{
    width: 960px;
    }
    .receipt-table{
    width: 700px;
    }
    .first-stats{
    width: 30%;
    margin-left: 50px;
    }
    .middle-stats{
    width: 30%;
    margin-left: 40px;
    }
    .last-stats{
    width: 30%;
    }
    }
    /* to make responsive for screens between 600-960px */
    @media only screen and (max-width: 960px){
    .container{
    width: 600px;
    }
    .first-p, .middle-p, .last-p{
    text-align: center;
    }
    }
    /* to make responsive to small screen */
    @media only screen and (max-width: 600px){
    .container{
    width: 100%;
    }
    .receipt-table img{
    width: 520px;
    }
    .first-stats, .middle-stats, .last-stats{
    width: 100%;
    }
    .first-logo-stat, .middle-logo-stat, .last-logo-stat{
    text-align: center;
    margin: 0 auto;
    }
    .nike-table, .jordan-table, .adidas-table{
    width: 100%;
    padding-top: 30px;
    }
    .nike-table img, .jordan-table img, .adidas-table img{
    height: 300px;
    }
    .weHave{
    font-size: 25px;
    }
    .brand-but{
    width: 30%;
    }
    .store-logo{
    border-top: 1px solid white;
    }
    .address-table{
    width: 100%;
    border-bottom: 1px solid white;
    }
    .store-logo, .desc-logo{
    width: 100%;
    /* border: 1px solid white; */
    }
    }
